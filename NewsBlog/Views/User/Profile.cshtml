

@{
    ViewBag.Title = "Profile";
}
@Html.Partial("_MenuBar", new ViewDataDictionary { { "id", Session["ID"] } })

<hr />

<h4>@Session["Name"] </h4>
<hr />

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Change profile information or pasword
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <h2>Change User pasword</h2>
            <form class="form-horizontal" method="post" action="/User/ProfilePas">
                <fieldset>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Currrent password</label>
                        <div class="col-md-4">
                            <input id="textinput" name="pasold" type="text" class="form-control input-md  text-danger" required="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">New pasword</label>
                        <div class="col-md-4">
                            <input id="textinput" name="pasnew" type="text" class="form-control input-md" required="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="singlebutton"></label>
                        <div class="col-md-4">
                            <button class="btn btn-danger">Change pasword</button>
                        </div>
                    </div>
                </fieldset>
            </form>
            <hr />
            <h2>Change User data</h2>
            <form class="form-horizontal" method="post" action="/User/ProfileDataChange">
                <fieldset>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Change userename</label>
                        <div class="col-md-4">
                            <input id="textinput" name="newName" type="text" class="form-control input-md  text-danger" placeholder="Input new user name" required="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Enter new safty anser</label>
                        <div class="col-md-4">
                            <input id="textinput" name="newSafty" type="text" class="form-control input-md" placeholder="Input the name of your first pet" required="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="singlebutton"></label>
                        <div class="col-md-4">
                            <button class="btn btn-info">Update profile</button>
                        </div>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>


<hr />
<hr />
<hr />
<form  method="post" action="/User/Logaut">
    <button class="btn btn-primary">Logout</button>
</form>
